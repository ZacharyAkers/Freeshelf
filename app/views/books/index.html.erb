<h1>Book List</h1>

<%= link_to "Create New Book", new_book_path %>
<br>
<br>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Description</th>
    <th>Url</th>
    <th colspan="3"></th>
  </tr>

<% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= book.description %></td>
      <td><%= book.url %></td>
      <td><%= link_to "Show", book %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to 'Destroy', book, method: :delete %></td>
    </tr>
<% end %>
</table>
